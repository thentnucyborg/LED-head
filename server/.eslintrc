{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
  },
  "extends": [
    "eslint:recommended",
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "modules": true,
    },
    "sourceType": "module"
  },
  "rules": {
    "eol-last": ["error"],
    "indent": ["error", 2, {"SwitchCase": 1}],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "max-len": ["error", 120],
    "no-console": ["off"],
    "no-unused-vars": ["error", { "vars": "all", "args": "none" }], 
    "no-var": ["error"]
  }
}
